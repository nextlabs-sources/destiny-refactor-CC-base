<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>rest-api-connector</display-name>
  <description>PDP Evaluation Request Connector with Multiple PEP enforcement requests</description>
  <filter>
    <filter-name>authenticationFilter</filter-name>
    <filter-class>com.nextlabs.evaluationconnector.filters.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authenticationFilter</filter-name>
    <url-pattern>/authorization/*</url-pattern>
    <url-pattern>/PDPConnector/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>evaluationRequest</servlet-name>
    <servlet-class>com.nextlabs.evaluationconnector.listeners.EvaluationRequestServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>evaluationRequest</servlet-name>
    <url-pattern>/authorization/*</url-pattern>
    <url-pattern>/PDPConnector/*</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>PropertiesFile</param-name>
    <param-value>/WEB-INF/rest-api-connector.properties</param-value>
  </context-param>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>