<DDACConfig>
    <check-updates-frequency>60</check-updates-frequency>  <!-- Once per minute -->

    <!-- Action mappings are the same across all ADs -->
    <action-mapping>
        <nextlabs>OPEN, RUN</nextlabs>
        <sddl>0x1200a9</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>OPEN</nextlabs>
        <sddl>FR</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>OPEN, EDIT</nextlabs>
        <sddl>0x12019f</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>EDIT</nextlabs>
        <sddl>0x100116</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>DELETE, EDIT, OPEN, RUN</nextlabs>
        <sddl>0x1301bf</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>EDIT, OPEN, RUN</nextlabs>
        <sddl>0x1201bf</sddl>
    </action-mapping>

    <action-mapping>
        <nextlabs>CHANGE_ATTRIBUTES, CHANGE_SECURITY, DELETE, EDIT, OPEN, RUN</nextlabs>
        <sddl>FA</sddl>
    </action-mapping>

